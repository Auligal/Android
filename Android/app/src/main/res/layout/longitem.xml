<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="185dp"
    android:layout_height="350dp">

    <ImageView
        android:id="@+id/cloudvillage_image"
        android:layout_width="175dp"
        android:layout_height="290dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/cloudvillage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cloudvillage_image" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/cloudvillage_authorimage"
        app:layout_constraintTop_toBottomOf="@id/cloudvillage_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/cloudvillage_authorname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cloudvillage_authorimage"
        app:layout_constraintLeft_toRightOf="@+id/cloudvillage_authorimage"
        app:layout_constraintTop_toTopOf="@+id/cloudvillage_authorimage" />

    <TextView
        android:id="@+id/cloudvillage_clicknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/cloudvillage_authorimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cloudvillage_authorimage"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/cloudvillage_button_more"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/button_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cloudvillage_clicknum"
        app:layout_constraintTop_toBottomOf="@+id/cloudvillage_title" />

</androidx.constraintlayout.widget.ConstraintLayout>