<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.recyclerview.widget.RecyclerView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.4">
    </androidx.recyclerview.widget.RecyclerView>
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/created_menu"
        android:layout_marginStart="15dp"
        android:padding="4dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/expanded_button"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_2"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/created_menu"
        android:id="@+id/created_menu_Text"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_2"
        android:text="@string/created_menu"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/created_menu_Text_numer"
        android:text="(8)"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/created_menu_Text"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_2" />

    <ImageView
        android:id="@+id/created_menu_button_add"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/button_add"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/recycleview_3"
        app:layout_constraintLeft_toRightOf="@id/created_menu_Text_numer"
        app:layout_constraintRight_toLeftOf="@+id/created_menu_button_more"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/created_menu_button_more"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/button_more"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/recycleview_3"
        app:layout_constraintLeft_toRightOf="@id/created_menu_button_add"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_2"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycleview_3"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/created_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/expanded_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_3"
        android:id="@+id/saved_menu"/>
    <TextView
        android:id="@+id/saved_menu_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saved_menu"
        android:padding="4dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@+id/saved_menu"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(9)"
        android:padding="4dp"
        android:layout_marginTop="10dp"
        android:id="@+id/saved_menu_Text_numer"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_3"
        app:layout_constraintLeft_toRightOf="@+id/saved_menu_Text" />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/saved_menu_button_add"
        android:background="@drawable/button_add"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@+id/recycleview_4"
        app:layout_constraintRight_toLeftOf="@+id/saved_menu_button_more"
        app:layout_constraintLeft_toRightOf="@+id/saved_menu_Text_numer"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_3" />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/saved_menu_button_more"
        android:background="@drawable/button_more"
        app:layout_constraintLeft_toRightOf="@id/saved_menu_button_add"
        app:layout_constraintBottom_toTopOf="@+id/recycleview_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycleview_3"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycleview_4"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/saved_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />
</androidx.constraintlayout.widget.ConstraintLayout>